# Supabase Configuration
# Récupérez ces valeurs dans Supabase > Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Database Connection
# Récupérez cette valeur dans Supabase > Settings > Database > Connection string (URI)
# Remplacez [YOUR-PASSWORD] par votre mot de passe de base de données
DATABASE_URL=postgresql://postgres.xxxxx:VOTRE_MOT_DE_PASSE@aws-0-eu-central-1.pooler.supabase.com:6543/postgres

# JWT Configuration
# Générez une clé secrète aléatoire (ex: openssl rand -base64 32)
JWT_SECRET=votre_jwt_secret_aleatoire_et_long_ici
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# App Configuration
NODE_ENV=development
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Email (SendGrid - optionnel pour l'instant)
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@kama.com

# Payment (optionnel pour l'instant)
AIRTEL_MONEY_API_KEY=
MOOV_MONEY_API_KEY=
STRIPE_SECRET_KEY=
